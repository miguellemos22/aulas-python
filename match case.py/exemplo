import os 
os.system("cls || clear ")

print("""
      1 - cadastrar
      2 - excluir
      3 - sair do sistema
      """)

opcao = int(input("digite uma opção: "))

match(opcao):
    case 1:
        print("opção de cadastrar usuário. ")
    case 2:
        print("opção de excluir usuário. ")
    case 3:
        print("opção de sair do sistema. ")
    case _:
        print("opção invalida")

        print("    FIM    ")

